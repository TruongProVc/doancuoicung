@using BanGiay.Models
@{
    ViewBag.Title = "Chi Tiết Đơn Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Cart> cartItems = Session["GioHang"] as List<Cart> ?? new List<Cart>();
    decimal cartTotal = cartItems.Sum(item => item.tongGia);
}

<div class="breadcrumb-section breadcrumb-nav-color--black">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h3 class="breadcrumb-title">Chi tiết đơn hàng</h3>
                    <div class="breadcrumb-nav breadcrumb-nav-color--black ">
                        <nav aria-label="breadcrumb">
                            <ul>
                                <li><a href="#">Trang chủ</a></li>
                                <li class="active" aria-current="page">Chi tiết đơn hàng</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="cart-section">
    <div class="cart-table-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="table_desc">
                        <div class="table_page table">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="product_name">Tên sản phẩm</th>
                                        <th class="product_price">Giá</th>
                                        <th class="product_size">Size</th>
                                        <th class="product_quantity">Số lượng</th>
                                        <th class="product_total">Tổng</th>
                                        <th class="product_remove">Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in cartItems)
                                    {
                                        <tr id="item-@item.maSP">
                                            <td class="product_name"><a href="#">@item.tenSP</a></td>
                                            <td class="product_price">@string.Format("{0:0,0 vnđ}", item.giaSP)</td>
                                            <td class="product_size">@item.size</td>
                                            <td class="product_quantity">
                                                <label>Số lượng</label>
                                                <input class="cart-plus-minus" type="number" min="1" maxlength="12" value="@item.soLuong" id="@item.maSP" onchange="updateQuantity('@item.maSP')" />
                                            </td>
                                            <td class="product_total">@string.Format("{0:0,0 vnđ}", item.tongGia)</td>
                                            <td class="product_remove">
                                                <a href="javascript:void(0);" onclick="removeItem('@item.maSP')"><i class="fa fa-trash-o"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="coupon_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-6">
                    <div class="coupon_code right">
                        <h3>Cart Totals</h3>
                        <div class="coupon_inner">
                            <div class="cart_subtotal">
                                <p>Giá</p>
                                <p class="cart_amount">@string.Format("{0:0,0 vnđ}", cartTotal)</p>
                            </div>
                            <div class="cart_subtotal">
                                <p>Ship</p>
                                <p class="cart_amount">Free</p>
                            </div>
                            <div class="cart_subtotal">
                                <p>Tổng</p>
                                <p class="cart_amount">@string.Format("{0:0,0 vnđ}", cartTotal)</p>
                            </div>
                            <div class="checkout_btn">
                                <a href="@Url.Action("Index", "Home")" class="btn btn-md btn-aqua">Quay lại mua sắm</a>
                                <a href="@Url.Action("Payment", "ThanhToan")" class="btn btn-md btn-pink">Tiếp tục thanh toán</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript">
    function removeItem(maSP) {
        $.ajax({
            url: '@Url.Action("RemoveItem", "ThanhToan")',
            type: 'POST',
            data: { maSP: maSP },
            success: function(response) {
                if (response.success) {
                    // Remove the item row from the table
                    $('#item-' + maSP).remove();

                    // Update the cart total
                    $('.cart_amount').text(response.updatedCartTotal);
                } else {
                    alert(response.message);
                }
            },
            error: function() {
                alert("An error occurred while removing the item.");
            }
        });
    }

    function updateQuantity(maSP) {
        var newQuantity = $("#" + maSP).val();
        $.ajax({
            url: '/ThanhToan/UpdateItem',
            type: 'GET',
            data: { maSP: maSP, sl: newQuantity },
            success: function(response) {
                if (response.success) {
                    // Update the total price for the item
                    $("#" + maSP).closest('tr').find('.product_total').text(response.updatedItemTotal);

                    // Update the cart total
                    $('.cart_amount').text(response.updatedCartTotal);
                } else {
                    alert(response.message);
                }
            },
            error: function() {
                alert("An error occurred while updating the cart.");
            }
        });
    }
</script>
