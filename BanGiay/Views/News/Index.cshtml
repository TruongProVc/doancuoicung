@model BanGiay.Models.BaiViet
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="blog-section">
    <div class="container">
        <div class="row flex-column-reverse flex-lg-row-reverse">
            <div class="col-lg-3">
                <!-- Start Sidebar Area -->

            </div>
            <div class="col-lg-12">
                <!-- Start Blog Single Content Area -->
                <div class="blog-single-wrapper">
                    <div class="blog-single-img" data-aos="fade-up" data-aos-delay="0">
                        <img class="img-fluid" src="@Model.hinhDaiDien" alt="">
                    </div>
                    <ul class="post-meta" data-aos="fade-up" data-aos-delay="200">
                        <li>Đăng bơi : <a href="#" class="author">@Model.idTaiKhoanDang</a></li>
                        <li>Vào ngày : <a href="#" class="date">@Model.ngayDang</a></li>
                    </ul>
                    <h4 class="post-title" data-aos="fade-up" data-aos-delay="400"></h4>
                    <div class="para-content" data-aos="fade-up" data-aos-delay="600">
                        <p>
                           @Model.noiDung
                        </p>
                     
                    </div>

                </div> <!-- End Blog Single Content Area -->

            </div>
        </div>  
    </div> <!-- ...:::: End Blog Single Section:::... -->
</div>

