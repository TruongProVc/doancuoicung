@using BanGiay.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var account = Session["InformationAccount"] as TaiKhoan;
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: rgba(240, 240, 240, 1);
        color: rgba(51, 51, 51, 1);
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .my-account-wrapper {
        display: flex;
        margin-top: 50px;
    }

    .menu {
        width: 30%;
        background-color: rgba(27, 41, 56, 0.8);
        padding: 20px;
        border-radius: 10px;
        color: rgba(255, 255, 255, 0.9);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .menu ul {
            list-style: none;
            padding: 0;
        }

            .menu ul li {
                margin-bottom: 10px;
                padding: 10px;
                cursor: pointer;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .menu ul li:hover {
                    background-color: rgb(8, 180, 242);
                }

    .content {
        width: 70%;
        background-color: rgba(255, 255, 255, 0.95);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-left: 20px;
    }

        .content h2 {
            margin-bottom: 20px;
            color: rgb(6, 7, 7);
        }

        .content label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
        }

        .content input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid rgba(204, 204, 204, 1);
            border-radius: 5px;
            font-size: 16px;
            background-color: rgba(255, 255, 255, 0.8);
        }

        .content button {
            padding: 10px 20px;
            background-color: rgb(8, 180, 242);
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .content button:hover {
                background-color: rgb(5, 46, 91);
            }

    .user-image {
        text-align: center;
        margin-bottom: 30px;
    }

        .user-image img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

    .menu ul li {
        margin-bottom: 10px;
        padding: 10px;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .menu ul li a {
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none; /* Remove underline */
            display: block;
        }

        .menu ul li:hover {
            background-color: rgb(8, 180, 242);
        }

        .menu ul li a:hover {
            color: rgba(0, 0, 0, 0.7); /* Optional: change text color on hover */
        }
</style>

<div class="container">
    <div class="my-account-wrapper">
        <!-- Menu Section -->
        <div class="menu">
            <ul>
                <div class="user-image">
                    <img src="~/Asset/assets/images/user/image-1.png" alt="User Image">
                </div>
                <li><a href="@Url.Action("Index" ,"UserProfile")">Thông tin</a></li>
                <li><a href="@Url.Action("ChangePassword" ,"UserProfile")">Đổi mật khẩu</a></li>
            </ul>
        </div>

        <!-- Account Information Section -->
        <div class="content">
            <h2>@account.ho @account.ten </h2>
            <form id="formChangeInformation">
                @Html.AntiForgeryToken()
                <label for="email">ID</label>
                <input type="text" name="idTaiKhoan" value="@account.idTaiKhoan" readonly>

                <label for="email">Email</label>
                <input type="email" name="email" value="@account.email">

                <label for="first-name">Họ</label>
                <input type="text" name="ho" value="@account.ho">

                <label for="last-name">Tên</label>
                <input type="text" name="ten" value="@account.ten">

                <label for="phone-number">Số điện thoại</label>
                <input type="text" name="soDienThoai" value="@account.soDienThoai">
                <button type="submit">Save</button>
            </form>
        </div>
    </div>
</div>


@section scriptInformationUser{
    <script>
        $(document).ready(function () {
            ChangeInformation();
        });
        function ChangeInformation() {
            $('#formChangeInformation').submit(function (e) {
                e.preventDefault();
                var data = new FormData($('#formChangeInformation')[0]);
                $.ajax({
                    url: '@Url.Action("Index","UserProfile")',
                    type: 'POST',
                    processData: false,
                    contentType: false,
                    data: data,
                    success: function (response) {
                        if (response.status) {
                            Swal.fire({
                                position: "center-center",
                                icon: "success",
                                title: response.message,
                                showConfirmButton: true,
                                timer: 1500
                            }).then((result) => {
                                if (result.dismiss === Swal.DismissReason.timer || result.isConfirmed) {
                                    location.reload(true);
                                }
                            });
                        } else {
                            Swal.fire({
                                position: "center-center",
                                icon: "error",
                                title: response.message,
                                showConfirmButton: true,
                                timer: 1500
                            }).then((result) => {
                                if (result.dismiss === Swal.DismissReason.timer || result.isConfirmed) {
                                    location.reload(true);
                                }
                            });
                        }
                    },
                    error: function () {
                        alert('Đã xảy ra lỗi.');
                    }
                });
            });
        }
    </script>
}
