@using BanGiay.Models;
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string status = (ViewBag.displayNote as string) ?? "";
    TaiKhoan account = Session["InformationAccount"] as TaiKhoan;
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: rgba(240, 240, 240, 1);
        color: rgba(51, 51, 51, 1);
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .my-account-wrapper {
        display: flex;
        margin-top: 50px;
    }

    .menu {
        width: 30%;
        background-color: rgba(27, 41, 56, 0.8);
        padding: 20px;
        border-radius: 10px;
        color: rgba(255, 255, 255, 0.9);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .menu ul {
            list-style: none;
            padding: 0;
        }

            .menu ul li {
                margin-bottom: 10px;
                padding: 10px;
                cursor: pointer;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .menu ul li:hover {
                    background-color: rgb(8, 180, 242);
                }

    .content {
        width: 70%;
        background-color: rgba(255, 255, 255, 0.95);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-left: 20px;
    }

        .content h2 {
            margin-bottom: 20px;
            color: rgb(6, 7, 7);
        }

        .content label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
        }

        .content input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid rgba(204, 204, 204, 1);
            border-radius: 5px;
            font-size: 16px;
            background-color: rgba(255, 255, 255, 0.8);
        }

        .content button {
            padding: 10px 20px;
            background-color: rgb(8, 180, 242);
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .content button:hover {
                background-color: rgb(5, 46, 91);
            }

    .user-image {
        text-align: center;
        margin-bottom: 30px;
    }

        .user-image img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

    .menu ul li {
        margin-bottom: 10px;
        padding: 10px;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .menu ul li a {
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none; /* Remove underline */
            display: block;
        }

        .menu ul li:hover {
            background-color: rgb(8, 180, 242);
        }

        .menu ul li a:hover {
            color: rgba(0, 0, 0, 0.7); /* Optional: change text color on hover */
        }

    .password-wrapper {
        position: relative;
    }

        .password-wrapper input {
            width: 100%;
            padding-right: 30px; /* Để chừa khoảng trống cho icon */
        }

    .password-toggle {
        position: absolute;
        top: 40%;
        right: 10px;
        transform: translateY(-50%);
        cursor: pointer;
        color: #666;
    }
</style>

<div class="container">
    <div class="my-account-wrapper">
        <!-- Menu Section -->
        <div class="menu">
            <ul>
                <div class="user-image">
                    <img src="~/Asset/assets/images/user/image-1.png" alt="User Image">
                </div>
                <li><a href="@Url.Action("Index", "UserProfile")">Thông tin </a></li>
                <li><a href="@Url.Action("ChangePassword", "UserProfile")">Đổi mật khẩu</a></li>
            </ul>
        </div>

        <!-- Change Password Section -->
        <div class="content">
            @using (Html.BeginForm("ChangePassword", "UserProfile", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h4 style="color: #000;"> Thay đổi mật khẩu</h4>
                <input type="hidden" name="id" value="@account.idTaiKhoan" />

                <!-- Mật khẩu hiện tại -->
                <div class="row">
                    <div class="col-md-8 form-it">
                        <label>Mật khẩu hiện tại </label>
                        <div class="password-wrapper">
                            <input type="password" placeholder="Nhập mật khẩu hiện tại" name="currentPasswd" id="currentPassword">
                            <span class="password-toggle" onclick="togglePassword('currentPassword')">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Mật khẩu mới -->
                <div class="row">
                    <div class="col-md-8 form-it">
                        <label>Mật khẩu mới</label>
                        <div class="password-wrapper">
                            <input type="password" placeholder="Mật khẩu mới" name="newPasswd" id="newPassword">
                            <span class="password-toggle" onclick="togglePassword('newPassword')">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Xác nhận mật khẩu mới -->
                <div class="row">
                    <div class="col-md-8 form-it">
                        <label>Xác nhận mật khẩu mới</label>
                        <div class="password-wrapper">
                            <input type="password" placeholder="Xác nhận mật khẩu mới" name="comfirmNewPw" id="confirmNewPassword">
                            <span class="password-toggle" onclick="togglePassword('confirmNewPassword')">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                    </div>
                </div>

                if (status.Length > 0)
                {
                    if (status.Equals("ok"))
                    {
                        <p style="color:green;">Đổi mật khẩu thành công</p>
                    }
                    else
                    {
                        <p style="color:red;">Đổi mật khẩu thất bại</p>
                    }
                }
                <div class="row">
                    <div class="col-md-2">
                        <button type="submit">Save</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function togglePassword(fieldId) {
        var field = document.getElementById(fieldId);
        var icon = document.querySelector('#' + fieldId + ' + .password-toggle i');
        if (field.type === "password") {
            field.type = "text";
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        } else {
            field.type = "password";
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    }
</script>
