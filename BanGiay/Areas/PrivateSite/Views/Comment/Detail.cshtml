@model BanGiay.Models.BinhLuan
@{
    ViewBag.Title = "Detail";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 ">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title fw-semibold mb-4">Chi tiết bình luận #@Model.sttBinhLuan</h5>
                    <div class="card">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">  
                                    <label class="form-label">Email</label>
                                    <input type="text" class="form-control" value="@Model.idTaiKhoan" disabled />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">ID sản phẩm</label>
                                    <input type="text" class="form-control" value="@Model.idSanPham" disabled />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Nội dung</label>
                                    <textarea class="form-control" disabled>@Model.noiDung</textarea>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Thời gian</label>
                                    <input type="text" class="form-control" value="@Model.ngayDang" disabled />
                                </div>
                                <div class="mt-4">
                                    <a href="@Url.Action("Index", "Comment")">
                                        <button type="button" class="btn btn-secondary" style="background-color:cadetblue;">Quay về</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>  
                </div>
            </div>
        </div>
    </div>
</div>
